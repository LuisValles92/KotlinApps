<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/ivAlbum"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:src="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvName"
        style="@style/TextoNombreAlbum"
        app:layout_constraintTop_toBottomOf="@+id/ivAlbum"
        app:layout_constraintLeft_toLeftOf="@+id/ivAlbum"
        app:layout_constraintRight_toRightOf="@+id/ivAlbum"
        tools:text="ALBUM"/>

    <TextView
        android:id="@+id/tvYearsSongs"
        style="@style/TextoAlbum"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        app:layout_constraintRight_toRightOf="@id/tvName"
        tools:text="2007 - 15"/>

</androidx.constraintlayout.widget.ConstraintLayout>