<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calculadora.calculadoraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="start"
            android:gravity="end"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="CÁLCULO"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:gravity="end"
            android:padding="10dp"
            android:singleLine="true"
            android:text="RESULTADO"
            android:textSize="45sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/calparAbrir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="("
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textSize="34.5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calparCerrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=")"
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textSize="34.5dp" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4CAF50"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/calsiete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calcuatro"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/caluno"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calcero"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E91E63"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/calocho"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calcinco"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/caldos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calcoma"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=","
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFDD00"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/calnueve"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calseis"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/caltres"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/caligual"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textAlignment="center"
                    android:textSize="50dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/calreset"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="R"
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textSize="37dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/caldelete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="D"
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textSize="37dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/caldivision"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textSize="40dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calmultiplicacion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="X"
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textSize="37dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calresta"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textSize="40dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calsuma"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:foreground="?selectableItemBackground"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textSize="40dp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>